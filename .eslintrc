{
  "extends": [
    "eslint:recommended",
    "airbnb",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "import",
    "jsx-a11y",
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "mongo": true
  },
  "rules": {
    "semi": [2, "always"],
    "arrow-parens": [2, "always"],
    "quotes": ["error", "single"],
    "eqeqeq": ["error", "always"],
    "no-underscore-dangle" : ["error", {"allow" : ["_id"]}]
  }
}